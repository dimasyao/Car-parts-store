@model IEnumerable<ShopManagingSystem.Models.ApplicationType>

<div class="container p-3">
    <div class="form-group row">
        <div class="col-6 pt-4">
            <h2 class="text-primary">Application Type List</h2>
        </div>
        <div class="col-6 pt-4 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> &nbsp; Create new application type
            </a>
        </div>
    </div>

    <br /><br />

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var applicationType in Model)
                {
                    <tr>
                        <td width="50%">@applicationType.Name</td>
                        <td class="text-center">
                            <div class="w-75% btn-group" role="group">
                                <a asp-controller="ApplicationType" asp-route-Id="@applicationType.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fa-solid fa-pencil"></i>
                                </a>
                                <a asp-controller="ApplicationType" asp-route-Id="@applicationType.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fa-solid fa-trash-can"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Applications aren't exist</p>
    }
</div>