@using SMS_Utility;
@model Product

<div class="col-lg-4 col-md-6 pb-4 filter @Model.Category.Name.Replace(' ', '_')">
    <div class="card bg-write rounded shadow-sm" style="border:3px solid #222">
        <div class="card-body px=3 pt-3 pb-1 row">
            <div class="col-7"><label class="float-left">@Model.Name</label></div>
            <div class="col-5 text-md-right"><label class="float-rigth"><span class="text-info h5">@Model.Price.ToString("c", new System.Globalization.CultureInfo("en-US"))</span></label></div>
        </div>
        <img class="card-img-top img-fluid mx-auto d-block mb-3 w-50" src="@WebConstant.ImagePath/@Model.Image" alt="@Model.Name" />
        <div class="card-body p-1 px-3 row">
            <div class="col-6">
                <span class="badge p-2 border w-100" style="background-color:lavenderblush; color:black">@Model.Category.Name</span>
            </div>
            <div class="col-6 border-0">
                <span class="badge p-2 border w-100" style="background-color:aliceblue; color:black">@Model.ApplicationType.Name</span>
            </div>
            <div class="col-12 pt-2" style="font-size:13px; text-align:justify"><p>@Model.ShortDescription</p></div>
            <div class="col-12 p-1">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-dark form-control btn-sm p-2" style="height:40px">View Details</a>
            </div>
        </div>
    </div>
</div>
