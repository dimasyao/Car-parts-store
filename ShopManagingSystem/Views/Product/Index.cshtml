@model IEnumerable<ShopManagingSystem.Models.Product>

<div class="container p-3">
    <div class="form-group row">
        <div class="col-6 pt-4">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 pt-4 text-end">
            <a asp-action="Upsert" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> &nbsp; Create New Product
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        ApplicationType
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Product in Model)
                {
                    <tr>
                        <td width="30%">@Product.Name</td>
                        <td width="10%">@Product.Price</td>
                        <td width="20%">@Product.Category.Name</td>
                        <td width="20%">@Product.ApplicationType.Name</td>
                        <td class="text-center">
                            <div class="w-75% btn-group" role="group">
                                <a asp-route-Id="@Product.Id" asp-action="Upsert" class="btn btn-primary mx-2">
                                    <i class="fa-solid fa-pencil"></i>
                                </a>
                                <a asp-route-Id="@Product.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fa-solid fa-trash-can"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Products aren't exist</p>
    }
</div>